<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
      <record id="pay_in_employee_form" model="ir.ui.view">
          <field name="name">Pay IN Employee form view</field>
          <field name="model">employee.pay.in.wiz</field>
          <field name="arch" type="xml" >
              <form>
                  <sheet>
                      <field name="photo" widget="image" class="oe_left oe_avatar" style="height: 80%%" readonly="1" nolabel="1"/>
                      <group>
                          <group>

                                <field name="name" readonly="1"/>
                                <field name="employee_id" readonly="1"/>
                                <field name="account_id" readonly="1"/>
                                <field name="employee_deposite_id" invisible="1"/>

                          </group>
                      </group>
                      <footer>
                          <button name="confirm_employee_pay_in" type="object" string="Confirm"/>
                          <button string="Cancel" class="oe_link" special="cancel" />
                      </footer>
                  </sheet>
              </form>
          </field>
      </record>


    </data>
</openerp>